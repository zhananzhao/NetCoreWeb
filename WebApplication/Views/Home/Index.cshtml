@{
    ViewData["Title"] = "Home Page";
}
<style>
    .input-group {
        margin-top: 15px;
        text-align:right;
    }
</style>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div id="formApp">
        <div class="input-group input-group-sm">
            <span class="input-group-addon col-sm-4">Id:</span>
            <input type="text" class="form-control col-sm-4" v-model="Id" />
        </div>
        <div class="input-group input-group-sm">
            <span class="input-group-addon col-sm-4">姓名:</span>
            <input type="text" class="form-control col-sm-4" placeholder="请输入姓名" v-model="Name" />
        </div>
        <div class="input-group input-group-sm">
            <span class="input-group-addon col-sm-4">年龄:</span>
            <input type="text" class="form-control col-sm-4" placeholder="请输入年龄" v-model="Age" />
        </div>
        <div class="input-group input-group-sm">
            <span class="input-group-addon col-sm-4">手机号:</span>
            <input type="text" class="form-control col-sm-4" placeholder="请输入手机号" v-model="Mobile" />
        </div>
        <div class="input-group" style="text-align:center;">
            <span class="input-group-addon col-sm-4"></span>
            <input type="button" class="btn btn-primary  col-sm-2" v-on:click="submit" value="提  交" />
        </div>
    </div>
</div>

<script>
    var vm = new Vue({
        el: '#formApp',
        data: {
            Id: 0,
            Name: '',
            Age: 0,
            Mobile: ''
        },
        methods: {
            submit: function () {
                //$.ajax({

                //});
                window.alert.success('我点了提交');
            }
        }
    });
</script>
